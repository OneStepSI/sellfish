<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRAGMENT HOME"
        android:id="@+id/texthome"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/kelembaban"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cuaca"
        android:id="@+id/cuaca"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:width="200dp"
        android:layout_below="@+id/kota"
        android:layout_alignLeft="@+id/kota"
        android:layout_alignStart="@+id/kota" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="KOTA"
        android:id="@+id/kota"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/tanggal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="suhu"
        android:id="@+id/suhu"
        android:textSize="20dp"
        android:layout_above="@+id/kelembaban"
        android:layout_toRightOf="@+id/waktu"
        android:layout_toEndOf="@+id/waktu"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kelembaban"
        android:id="@+id/kelembaban"
        android:textSize="20dp"
        android:layout_below="@+id/kota"
        android:layout_alignLeft="@+id/suhu"
        android:layout_alignStart="@+id/suhu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waktu"
        android:id="@+id/waktu"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tanggal"
        android:id="@+id/tanggal"
        android:textSize="15dp"
        android:layout_below="@+id/waktu"
        android:layout_alignLeft="@+id/waktu"
        android:layout_alignStart="@+id/waktu" />



</RelativeLayout>